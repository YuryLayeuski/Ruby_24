<h2>Register</h2>
<p>On this page You can register for our Barber Shop</p>

<form action="/visit" method="POST" role="form">

  <div class="form-group">
    <label>Your Name</label>
    <input name="username" type="text" class="form-control" placeholder="Your name" value="<%= @username %>>"
  </div>

  <div class="form-group">
    <label>Your Phone Number</label>
    <input name="phone" type="text" class="form-control" placeholder="Ваш телефон" value="<%= @phone %>"
  </div>

  <div class="form-group">
    <label>When are You going to came?</label>
    <input name="datetime" type="text" class="form-control" placeholder="Enter Your Data and Time" value="<%= @datetime %>">
  </div>

  <div class="form-group">
    <label>Choose your barber master</label>
    <select name="barber" class="form-control">
  <option>...</option>
  <option>Mike Johnson</option>
  <option>Jessie Pinkman</option>
  <option>Gass Frik</option>
  <option>Hector Salomon</option>
   </select>
  </div>


  <div class="form-group">
    <label>Which color do You want?</label>
    
    <select id="color" name="color">
  <option value="#7bd148">Green</option>
  <option value="#5484ed">Bold blue</option>
  <option value="#a4bdfc">Blue</option>
  <option value="#46d6db">Turquoise</option>
  <option value="#7ae7bf">Light green</option>
  <option value="#51b749">Bold green</option>
  <option value="#fbd75b">Yellow</option>
  <option value="#ffb878">Orange</option>
  <option value="#ff887c">Red</option>
  <option value="#dc2127">Bold red</option>
  <option value="#dbadff">Purple</option>
  <option value="#e1e1e1">Gray</option>
</select>
  </div>

  <button type="submit" class="btn btn-primary">Submit</button>

</form>

<script type="text/javascript">
    $('#color').simplecolorpicker();
</script>




